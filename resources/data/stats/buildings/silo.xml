<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="silo" class="ModulableBuilding" nameId="building_silo_n" maxLevel="5" maxBuild="5" descriptionId="building_silo_d">
        <buildTime>
            <set fromLevel="1" function="Math.pow($level,2.7)*1000*60" />
        </buildTime>
        <stats>
            <stat name="MAX_RESOURCE_FEO" function="(1000+(Math.pow($level, 2)*100))*10" op="DIFF" />
            <stat name="MAX_RESOURCE_C" function="(1000+(Math.pow($level, 2)*100))*10" op="DIFF" />
            <stat name="MAX_RESOURCE_CH4" function="(1000+(Math.pow($level, 2)*100))*10" op="DIFF" />
            <stat name="MAX_RESOURCE_ATO3" function="(1000+(Math.pow($level, 2)*100))*10" op="DIFF" />
            <stat name="MAX_RESOURCE_H2O" function="(1000+(Math.pow($level, 2)*100))*10" op="DIFF" />
        </stats>
        <modules max="1">
            <module id="module_silo_improve_feo" />
            <module id="module_silo_improve_c" />
            <module id="module_silo_improve_ato3" />
            <module id="module_silo_improve_ch4" />
            <module id="module_silo_improve_h2o" />
        </modules>
        <requirements>
            <functions>
                <function fromLevel="2" itemId="resource_c" value="0,2*Math.pow($level,4)"/>
                <function fromLevel="2" itemId="resource_feo" value="0,2*Math.pow($level,4)"/>
            </functions>
        </requirements>
    </building>
</list>