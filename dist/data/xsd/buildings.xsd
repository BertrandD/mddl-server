<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="list">
		<xs:complexType>
			<xs:sequence>
				<xs:element name="building" minOccurs="1" maxOccurs="unbounded">
					<xs:complexType>
                        <xs:sequence>
                            <xs:element name="creation" minOccurs="0" maxOccurs="1">
                                <xs:complexType>
                                    <xs:sequence>
                                        <xs:element name="item" minOccurs="0" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:attribute name="id" type="xs:normalizedString" use="required" />
                                                <xs:attribute name="count" type="xs:long" use="required" />
                                            </xs:complexType>
                                        </xs:element>
                                        <xs:element name="building" minOccurs="0" maxOccurs="unbounded">
                                            <xs:complexType>
                                                <xs:attribute name="id" type="xs:normalizedString" use="required" />
                                                <xs:attribute name="level" type="xs:integer" use="required" />
                                            </xs:complexType>
                                        </xs:element>
                                    </xs:sequence>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute name="id" type="xs:normalizedString" use="required" />
                        <xs:attribute name="name" type="xs:normalizedString" use="required" />
                        <xs:attribute name="type" type="xs:normalizedString" use="required" />
                        <xs:attribute name="description" type="xs:normalizedString" use="required" />
                        <xs:attribute name="buildTime" type="xs:positiveInteger" use="required" />
                        <xs:attribute name="maxLevel" type="xs:positiveInteger" use="required"/>
                        <xs:attribute name="maxHealth" type="xs:positiveInteger" use="required" />
					</xs:complexType>
				</xs:element>
			</xs:sequence>
		</xs:complexType>
	</xs:element>
</xs:schema>