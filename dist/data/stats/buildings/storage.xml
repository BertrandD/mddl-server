<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="storage" type="Storage" nameId="building_storage_n" maxLevel="5" descriptionId="building_storage_d">
        <buildTime>
            <set fromLevel="1" function="Math.pow($level,2.7)*1000*60" />
        </buildTime>
        <stats>
            <stat name="MAX_VOLUME" op="DIFF" />
        </stats>
        <properties>
            <property name="capacity" value="(1000+(Math.pow($level, 2)*100))*10" />
        </properties>
        <requirements>
            <functions>
                <function fromLevel="2" itemId="resource_c" value="0,2*Math.pow($level,4)"/>
                <function fromLevel="2" itemId="resource_feo" value="0,2*Math.pow($level,4)"/>
            </functions>
        </requirements>
    </building>
</list>