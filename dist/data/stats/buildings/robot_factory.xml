<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="robot_factory" type="RobotFactory" nameId="robot_factory_n" maxLevel="30" descriptionId="robot_factory_d">
        <buildTime>
            <set fromLevel="1" function="1750*$level" />
        </buildTime>
        <stats>
            <baseStat name="BUILD_COOLDOWN_REDUCTION" op="PER">
                <set function="($level * (0.0085))"/>
            </baseStat>
        </stats>
        <requirements>
            <functions>
                <function fromLevel="1" itemId="resource_ch4" value="100*$level"/>
            </functions>
        </requirements>
    </building>
</list>