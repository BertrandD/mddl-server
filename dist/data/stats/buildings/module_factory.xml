<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="module_factory" class="ModuleFactory" nameId="building_module_factory_n" maxLevel="25" descriptionId="building_module_factory_d">
        <buildTime>
            <set fromLevel="1" function="Math.pow($level,2.7)*1000*60" />
        </buildTime>
        <propertiesByLevel>
            <properties level="1">
                <list name="unlock_modules">
                    <set name="module" value="module_silo_improve_feo" />
                    <set name="module" value="module_silo_improve_c" />
                </list>
            </properties>
            <properties level="2">
                <list name="unlock_modules">
                    <set name="module" value="module_silo_improve_ato3" />
                    <set name="module" value="module_silo_improve_ch4" />
                    <set name="module" value="module_silo_improve_h2o" />
                    <set name="module" value="module_optimizer_feo" />
                </list>
            </properties>
            <properties level="3">
                <list name="unlock_modules">
                    <set name="module" value="module_optimizer_c" />
                </list>
            </properties>
            <properties level="5">
                <list name="unlock_modules">
                    <set name="module" value="module_optimizer_ch4" />
                    <set name="module" value="module_optimizer_ato3" />
                </list>
            </properties>
            <properties level="7">
                <list name="unlock_modules">
                    <set name="module" value="module_optimizer_h2o" />
                </list>
            </properties>
        </propertiesByLevel>
        <requirements>
            <functions>
                <function fromLevel="2" itemId="resource_feo" value="0,2*Math.pow($level,4)"/>
            </functions>
            <requirement level="5">
                <building id="mine" level="2" />
                <building id="storage" level="2" />
            </requirement>
        </requirements>
    </building>
</list>