<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="power_factory" nameId="building_power_factory_n" type="PowerFactory" class="CommonBuilding" descriptionId="building_power_factory_d" maxLevel="1">
        <buildTime>
            <set fromLevel="1" function="Math.pow($level,2.7)*1000*60" />
        </buildTime>
        <stats>
            <stat name="ENERGY" function="18*Math.pow($level,2)+150" op="DIFF" />
        </stats>
        <requirements>
            <functions>
                <function fromLevel="1" itemId="resource_feo" value="0,2*Math.pow($level,4)"/>
                <function fromLevel="1" itemId="resource_c" value="0,2*Math.pow($level,4)"/>
            </functions>
        </requirements>
    </building>
</list>