<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../xsd/buildings.xsd">
    <building id="pump" nameId="building_pump_n" type="Extractor" descriptionId="building_pump_d" maxLevel="10">
        <buildTime>
            <set fromLevel="1" toLevel="5" function="5*$level" />
            <set fromLevel="6" function="10*$level" />
        </buildTime>
        <properties>
            <property name="max_modules" value="2" />
        </properties>
        <modules>
            <module id="module_optimizer_h2o" />
            <module id="module_optimizer_ch4" />
        </modules>
        <requirements>
            <functions>
                <function fromLevel="2" itemId="resource_c" value="100*$level"/>
                <function fromLevel="3" toLevel="8" itemId="resource_feo" value="250*$level"/>
                <function fromLevel="4" itemId="resource_ato3" value="25*$level"/>
            </functions>
            <requirement level="5">
                <building id="power_factory" level="2" />
                <item id="resource_h2o" count="250" />
            </requirement>
        </requirements>
        <productions>
            <produce itemId="resource_ch4" function="100+(35*$level)" />
            <produce itemId="resource_h2o" function="100+(100*$level)" />
        </productions>
    </building>
</list>