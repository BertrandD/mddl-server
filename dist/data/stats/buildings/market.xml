<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="market" type="CommonBuilding" nameId="market_n" maxLevel="8" descriptionId="market_d">
        <buildTime>
            <set fromLevel="1" toLevel="5" function="5*$level" />
            <set fromLevel="6" function="10*$level" />
        </buildTime>
        <properties>
            <property name="cooldown_reduction" value="$cooldown - ($cooldown * ($level * 0.05))"/>
        </properties>
        <requirements>
            <functions>
                <function fromLevel="1" toLevel="4" itemId="resource_feo" value="100*(Math.pow($level,2))" />
                <function fromLevel="5" itemId="resource_steel" value="100*(Math.pow($level,2))" />
            </functions>
            <requirement level="3">
                <building id="mine_metal" level="1" />
            </requirement>
            <requirement level="5">
                <building id="mine" level="2" />
                <building id="storage" level="2" />
            </requirement>
        </requirements>
    </building>
</list>