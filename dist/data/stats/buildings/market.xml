<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="market" type="CommonBuilding" nameId="market_n" maxLevel="8" descriptionId="market_d" buildTimeFunc="10*$level">
        <properties>
            <property name="cooldown_reduction" value="$cooldown - ($cooldown * ($level * 0.05))"/>
        </properties>
        <requirements>
            <requirement level="1">
                <function type="ITEM" id="resource_feo" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="2">
                <function type="ITEM" id="resource_feo" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="3">
                <function type="ITEM" id="resource_steel" val="100*(Math.pow($level,2))" />
                <building id="mine_metal" level="1" />
            </requirement>
            <requirement level="4">
                <function type="ITEM" id="resource_steel" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="5">
                <function type="ITEM" id="resource_steel" val="100*(Math.pow($level,2))" />
                <building id="mine" level="2" />
                <building id="storage" level="2" />
            </requirement>
            <requirement level="6">
                <function type="ITEM" id="resource_steel" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="7">
                <function type="ITEM" id="resource_steel" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="8">
                <function type="ITEM" id="resource_steel" val="100*(Math.pow($level,2))" />
            </requirement>
        </requirements>
    </building>
</list>