<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="shield" nameId="building_shield_n" type="Shield" descriptionId="building_shield_d" maxLevel="10">
        <buildTime>
            <set fromLevel="1" function="Math.pow($level,2.7)*1000*60" />
        </buildTime>
        <properties>
            <property name="availables_modules" value="module_building_shield_laser;module_building_shield_ion;module_building_shield_photon;module_building_shield_plasma;module_building_shield_graviton"/>
            <property name="max_modules" value="1" />
            <property name="armor" value="10000" />
        </properties>
        <requirements>
            <functions>
                <function fromLevel="1" itemId="resource_c" value="0,2*Math.pow($level,4)"/>
                <function fromLevel="1" itemId="resource_ato3" value="0,2*Math.pow($level,4)"/>
            </functions>
        </requirements>
    </building>
</list>