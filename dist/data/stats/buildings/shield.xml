<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="shield" nameId="building_shield_n" type="Shield" descriptionId="building_shield_d" maxLevel="10">
        <buildTime>
            <set fromLevel="1" function="Math.pow($level,2.7)*1000*60" />
        </buildTime>
        <stats>
            <baseStat name="MAX_SHIELD" op="DIFF">
                <set function="1000 * $level"/>
            </baseStat>
        </stats>
        <modules>
            <module id="module_building_shield_laser" />
            <module id="module_building_shield_ion" />
            <module id="module_building_shield_photon" />
            <module id="module_building_shield_plasma" />
            <module id="module_building_shield_graviton" />
        </modules>
        <properties>
            <property name="max_modules" value="1" />
            <property name="armor" value="10000 + (5000 * $level)" />
        </properties>
        <requirements>
            <functions>
                <function fromLevel="1" itemId="resource_c" value="0,2*Math.pow($level,4)"/>
                <function fromLevel="1" itemId="resource_ato3" value="0,2*Math.pow($level,4)"/>
            </functions>
        </requirements>
    </building>
</list>