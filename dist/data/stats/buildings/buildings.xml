<?xml version="1.0" encoding="UTF-8"?>
<list xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../xsd/buildings.xsd">
    <building id="headquarter" type="Headquarter" nameId="building_headquarter_n" maxLevel="8" descriptionId="building_headquarter_d" buildTimeFunc="5*$level">
        <requirements>
            <requirement level="1">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="2">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="3">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
                <building id="mine_metal" level="1" />
            </requirement>
            <requirement level="4">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="5">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
                <building id="mine_metal" level="2" />
                <building id="storage_metal" level="1" />
            </requirement>
            <requirement level="6">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="7">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
            </requirement>
            <requirement level="8">
                <function type="ITEM" id="metal" val="100*(Math.pow($level,2))" />
            </requirement>
        </requirements>
    </building>
    <building id="storage_metal" type="Storage" nameId="building_storage_metal_n" maxLevel="1" descriptionId="building_storage_metal_d" buildTimeFunc="5*$level" />
    <building id="storage_crystal" type="Storage" nameId="building_storage_crystal_n" maxLevel="1" descriptionId="building_storage_crystal_d" buildTimeFunc="5*$level" />
    <building id="mine_metal" type="Mine" nameId="building_mine_metal_n" maxLevel="1" descriptionId="building_mine_metal_d" buildTimeFunc="5*$level">
        <requirements>
            <requirement level="1">
                <building id="headquarter" level="1" />
                <item id="metal" count="300" />
            </requirement>
        </requirements>
        <properties>
            <property name="production" type="function" value="(100+(Math.pow($level, 2)))*10" />
        </properties>
    </building>
</list>